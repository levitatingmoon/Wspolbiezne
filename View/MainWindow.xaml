<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <StackPanel>
        <TextBox x:Name="NumberTextBox" Width="300" Height="50" PreviewTextInput="PreviewTextInput"></TextBox>
        <Button x:Name="ButtonStart" Width="100" Height="50" Click="Button_Click" Content="Start"/>
        <Canvas x:Name="CanvasBox" Width="800" Height="300" Background="LightGray">
        </Canvas>
    </StackPanel>
</Window>
